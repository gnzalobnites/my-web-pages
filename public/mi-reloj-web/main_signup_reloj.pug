main.d-flex.align-items-center.min-vh-100
  .container
    .row.justify-content-center
      .col-md-6.col-lg-4
        #div_int_reloj.gap-1.d-block.p-3.bg-light.rounded.shadow
          if mensaje
            .alert.alert-success.mb-3= mensaje
          .mb-3
            label.form-label(for="id") ID de usuario:
            input#id.form-control(type="text" required placeholder="Tu ID")
          .mb-3
            label.form-label(for="password") Contraseña:
            input#password.form-control(type="password" required placeholder="Tu contraseña")
          .d-grid
            button#btn-registro.btn.btn-primary(type="button") Registrarse
